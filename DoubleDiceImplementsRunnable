package dicegamefinal;

import java.util.Random;

/**
 *
 * @author KenOne
 */
public class DoubleDice2 extends Dice implements Runnable {
    String threadName;
    private static final int[] valuesArray = new int[9];
    private static int writeIndex = 0;

    public DoubleDice2(String tName) {
        super(1);
        threadName = tName;
    }

    public void add(int value) {
        synchronized (DoubleDice2.class) {
            int pos = writeIndex;
//            System.out.printf("%s starting sync add(%d), writeIndex = %d\n", Thread.currentThread().getName(), value,
//                    writeIndex);
            valuesArray[pos] = value;
            System.out.printf("%s wrote %d to index %d\n", Thread.currentThread().getName(), value, writeIndex);
            ++writeIndex;
            System.out.printf("Next writeIndex %d\n", writeIndex);
        }
    }

    @Override
    public String toString() {
        return "DoubleDice " + super.toString();
    }

    @Override
    public void run() {
        for (int i = 0; i < 36; i++) {
            add(super.Throw());
        }
    }
}
